<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:orientation="vertical"
    tools:context="com.example.ylsn.myapplication.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">
<android.support.constraint.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="212dp"
    android:background="@color/white"
    android:layout_marginStart="19dp"
    android:layout_marginEnd="19dp"
    android:id="@+id/constraintLayout3"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="164dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <EditText
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="注册账号"
        android:inputType="phone"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/email"
        android:layout_marginTop="28dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="注册昵称"
        android:inputType="textEmailAddress"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/count"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/password"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="注册密码"
        android:inputType="textPassword"
        android:layout_marginEnd="39dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/password0"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="39dp" />

    <TextView
        android:id="@+id/count0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="账号"
        android:textSize="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/count"
        app:layout_constraintRight_toRightOf="@+id/email0"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/email0"
        app:layout_constraintTop_toTopOf="@+id/count"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp" />

    <TextView
        android:id="@+id/email0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="昵称"
        android:textSize="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/email"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/password0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/password0" />

    <TextView
        android:id="@+id/password0"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="密码"
        android:textSize="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp" />
</android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/sign"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:text="注册"
        android:onClick="onClick"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/blue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="221dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="212dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3" />

    <TextView
        android:id="@+id/textflag"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:textColor="@color/white"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="24dp" />
</android.support.constraint.ConstraintLayout>
