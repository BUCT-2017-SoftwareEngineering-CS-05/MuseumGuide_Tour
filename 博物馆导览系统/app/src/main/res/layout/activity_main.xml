<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.example.ylsn.myapplication.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/white"
        android:layout_marginStart="46dp"
        android:id="@+id/constraintLayout4"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textflag"
        android:layout_marginEnd="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/topic"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1.0">
    <TextView
        android:id="@+id/account0"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:text="账号"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />
    <EditText
        android:id="@+id/account"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="请输入手机号码"
        android:inputType="phone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/pass0"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pass0" />
    <TextView
        android:id="@+id/pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="密码"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/pass0"
        app:layout_constraintRight_toRightOf="@+id/account0"
        android:layout_marginTop="9dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/account0"
        app:layout_constraintTop_toTopOf="@+id/pass0" />

    <EditText
        android:id="@+id/pass0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginEnd="51dp"
        android:layout_marginStart="45dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/account"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pass" />
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/topic"
        android:layout_width="235dp"
        android:layout_height="56dp"
        android:text="博物馆导览系统"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginEnd="21dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:text="登录"
        android:onClick="onClick"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@color/blue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="206dp"
        app:layout_constraintTop_toBottomOf="@+id/topic"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="206dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/found"
        android:layout_width="82dp"
        android:layout_height="0dp"
        android:text="找回密码"
        android:textSize="20dp"
        android:clickable="true"
        android:textColor="@color/white"
        android:onClick="onClick"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/sig"
        app:layout_constraintRight_toRightOf="@+id/login"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/sig"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="@color/white"
        android:text="注册"
        android:textSize="20dp"
        android:layout_marginStart="9dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/login" />

    <TextView
        android:id="@+id/textflag"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/login"
        tools:layout_constraintLeft_creator="1" />


</android.support.constraint.ConstraintLayout>
