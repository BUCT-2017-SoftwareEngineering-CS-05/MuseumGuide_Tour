<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/found"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:clickable="true"
        android:background="@color/blue"
        android:text="找回密码"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="216dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />
<android.support.constraint.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="194dp"
    android:background="@color/white"
    android:id="@+id/constraintLayout2"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    app:layout_constraintRight_toRightOf="@+id/found"
    android:layout_marginTop="194dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="@+id/found"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/count0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="账号"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="25dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/email0"
        app:layout_constraintRight_toRightOf="@+id/email0"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/email0" />

    <TextView
        android:id="@+id/email0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="邮箱"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/password0"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/count"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/password0" />

    <TextView
        android:id="@+id/password0"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:text="密码"
        android:textSize="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/password"
        android:layout_marginLeft="38dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="找回密码的手机号"
        android:inputType="phone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/email"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/email"
        android:layout_width="207dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="注册时预留邮箱"
        android:inputType="textEmailAddress"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintRight_toRightOf="@+id/password"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="201dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="输入新密码"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/email0"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/password0"
        android:layout_marginLeft="9dp"
        app:layout_constraintVertical_bias="0.216" />
</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
